"use client";

import { useState, useEffect } from "react";
import { useSession } from "next-auth/react";
import { useRouter } from "next/navigation";
import Image from "next/image";

interface Banner {
  id: string;
  title: string;
  subtitle?: string;
  imageUrl: string;
  linkUrl?: string;
  buttonText?: string;
  position: string;
  isActive: boolean;
  order: number;
  createdAt: string;
  updatedAt: string;
}

interface SiteSetting {
  id: string;
  key: string;
  value: string;
}

export default function AdminBannerPage() {
  const { data: session, status } = useSession();
  const router = useRouter();
  const [banners, setBanners] = useState<Banner[]>([]);
  const [settings, setSettings] = useState<Record<string, string>>({});
  const [loading, setLoading] = useState(true);
  const [activeTab, setActiveTab] = useState<"banners" | "logo">("banners");
  const [positionFilter, setPositionFilter] = useState<string>("all");

  // Form states for banner
  const [isCreating, setIsCreating] = useState(false);
  const [editingId, setEditingId] = useState<string | null>(null);
  const [formData, setFormData] = useState({
    title: "",
    subtitle: "",
    imageUrl: "",
    linkUrl: "",
    buttonText: "",
    position: "hero-carousel",
    isActive: true,
    order: 0,
  });

  const [logoUrl, setLogoUrl] = useState("");

  // Gallery states
  const [showGallery, setShowGallery] = useState(false);
  const [galleryImages, setGalleryImages] = useState<{ filename: string; url: string }[]>([]);
  const [uploading, setUploading] = useState(false);

  useEffect(() => {
    if (status === "unauthenticated") {
      router.push("/signin");
    } else if (session?.user?.role !== "ADMIN") {
      router.push("/");
    } else {
      fetchBanners();
      fetchSettings();
    }
  }, [status, session, router]);

  const fetchBanners = async () => {
    try {
      const res = await fetch("/api/admin/banners");
      if (res.ok) {
        const data = await res.json();
        setBanners(data);
      }
    } catch (error) {
      console.error("Failed to fetch banners:", error);
    } finally {
      setLoading(false);
    }
  };

  const fetchSettings = async () => {
    try {
      const res = await fetch("/api/admin/settings");
      if (res.ok) {
        const data = await res.json();
        const settingsMap = data.reduce((acc: any, s: SiteSetting) => {
          acc[s.key] = s.value;
          return acc;
        }, {});
        setSettings(settingsMap);
        setLogoUrl(settingsMap.logo_url || "/images/logo/logo.svg");
      }
    } catch (error) {
      console.error("Failed to fetch settings:", error);
    }
  };

  const fetchGallery = async () => {
    try {
      const res = await fetch("/api/admin/gallery?folder=banners");
      if (res.ok) {
        const data = await res.json();
        setGalleryImages(data.images || []);
      }
    } catch (error) {
      console.error("Failed to fetch gallery:", error);
    }
  };

  const handleFileUpload = async (e: React.ChangeEvent<HTMLInputElement>) => {
    const file = e.target.files?.[0];
    if (!file) return;

    setUploading(true);
    try {
      const uploadFormData = new FormData();
      uploadFormData.append("file", file);
      uploadFormData.append("folder", "banners");

      const res = await fetch("/api/admin/upload", {
        method: "POST",
        body: uploadFormData,
      });

      if (res.ok) {
        const data = await res.json();
        setFormData((prev) => ({ ...prev, imageUrl: data.url }));
        await fetchGallery();
        alert("Image uploaded successfully!");
      } else {
        const error = await res.json();
        alert(`Upload failed: ${error.error}`);
      }
    } catch (error) {
      console.error("Upload error:", error);
      alert("Failed to upload image");
    } finally {
      setUploading(false);
    }
  };

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    setLoading(true);

    try {
      if (editingId) {
        // Update
        const res = await fetch(`/api/admin/banners/${editingId}`, {
          method: "PATCH",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(formData),
        });
        if (res.ok) {
          await fetchBanners();
          resetForm();
          alert("Banner updated successfully!");
        }
      } else {
        // Create
        const res = await fetch("/api/admin/banners", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(formData),
        });
        if (res.ok) {
          await fetchBanners();
          resetForm();
          setIsCreating(false);
          alert("Banner created successfully!");
        }
      }
    } catch (error) {
      console.error("Failed to save banner:", error);
      alert("Failed to save banner");
    } finally {
      setLoading(false);
    }
  };

  const handleDelete = async (id: string) => {
    if (!confirm("Are you sure you want to delete this banner?")) return;

    setLoading(true);
    try {
      const res = await fetch(`/api/admin/banners/${id}`, {
        method: "DELETE",
      });
      if (res.ok) {
        await fetchBanners();
        alert("Banner deleted successfully!");
      }
    } catch (error) {
      console.error("Failed to delete banner:", error);
      alert("Failed to delete banner");
    } finally {
      setLoading(false);
    }
  };

  const handleEdit = (banner: Banner) => {
    setFormData({
      title: banner.title,
      subtitle: banner.subtitle || "",
      imageUrl: banner.imageUrl,
      linkUrl: banner.linkUrl || "",
      buttonText: banner.buttonText || "",
      position: banner.position,
      isActive: banner.isActive,
      order: banner.order,
    });
    setEditingId(banner.id);
    setIsCreating(true);
  };

  const resetForm = () => {
    setFormData({
      title: "",
      subtitle: "",
      imageUrl: "",
      linkUrl: "",
      buttonText: "",
      position: "hero-carousel",
      isActive: true,
      order: 0,
    });
    setEditingId(null);
  };

  const handleSaveLogo = async () => {
    setLoading(true);
    try {
      const res = await fetch("/api/admin/settings", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ key: "logo_url", value: logoUrl }),
      });
      if (res.ok) {
        alert("Logo updated successfully!");
        await fetchSettings();
      }
    } catch (error) {
      console.error("Failed to save logo:", error);
      alert("Failed to save logo");
    } finally {
      setLoading(false);
    }
  };

  if (status === "loading" || loading) {
    return (
      <div className="flex items-center justify-center min-h-screen">
        <div className="text-center">Loading...</div>
      </div>
    );
  }

  return (
    <div className="bg-white rounded-xl shadow-1 p-6">
      <h1 className="text-2xl font-bold text-dark mb-6">
        Banner & Logo Management
      </h1>

      {/* Tabs */}
      <div className="mb-6 border-b border-gray-200">
        <nav className="-mb-px flex space-x-8">
          <button
            onClick={() => setActiveTab("banners")}
            className={`${
              activeTab === "banners"
                ? "border-blue text-blue"
                : "border-transparent text-dark-4 hover:text-dark hover:border-gray-3"
            } whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm`}
          >
            Banners
          </button>
          <button
            onClick={() => setActiveTab("logo")}
            className={`${
              activeTab === "logo"
                ? "border-blue text-blue"
                : "border-transparent text-dark-4 hover:text-dark hover:border-gray-3"
            } whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm`}
          >
            Logo
          </button>
        </nav>
      </div>

      {/* Banner Tab */}
      {activeTab === "banners" && (
        <div>
          {/* Filter buttons */}
          <div className="mb-6 flex flex-wrap gap-3">
            <button
              className={`px-4 py-2 rounded-md text-sm font-medium ${
                positionFilter === "all"
                  ? "bg-blue text-white"
                  : "bg-gray-2 text-dark hover:bg-gray-3"
              }`}
              onClick={() => setPositionFilter("all")}
            >
              All Positions
            </button>
            <button
              className={`px-4 py-2 rounded-md text-sm ${
                positionFilter === "hero-carousel"
                  ? "bg-blue text-white"
                  : "bg-gray-2 text-dark hover:bg-gray-3"
              }`}
              onClick={() => setPositionFilter("hero-carousel")}
            >
              üé† Carousel (3 slides)
            </button>
            <button
              className={`px-4 py-2 rounded-md text-sm ${
                positionFilter === "hero-side"
                  ? "bg-blue text-white"
                  : "bg-gray-2 text-dark hover:bg-gray-3"
              }`}
              onClick={() => setPositionFilter("hero-side")}
            >
              üì± Side (2 banners)
            </button>
            <button
              className={`px-4 py-2 rounded-md text-sm ${
                positionFilter === "promo-big"
                  ? "bg-blue text-white"
                  : "bg-gray-2 text-dark hover:bg-gray-3"
              }`}
              onClick={() => setPositionFilter("promo-big")}
            >
              üéØ Promo Big (1 banner)
            </button>
            <button
              className={`px-4 py-2 rounded-md text-sm ${
                positionFilter === "promo-small"
                  ? "bg-blue text-white"
                  : "bg-gray-2 text-dark hover:bg-gray-3"
              }`}
              onClick={() => setPositionFilter("promo-small")}
            >
              üéÅ Promo Small (2 banners)
            </button>
          </div>

          <div className="mb-6 flex justify-between items-center">
            <div>
              <h2 className="text-xl font-semibold text-dark">Banner Management</h2>
              <p className="text-sm text-dark-4 mt-1">
                Hero Carousel (3 slides) | Side Banners (2) | Promo Big (1) | Promo Small (2)
              </p>
            </div>
            <button
              onClick={() => {
                setIsCreating(!isCreating);
                resetForm();
              }}
              className="bg-blue text-white px-4 py-2 rounded-md hover:bg-blue-dark"
            >
              {isCreating ? "Cancel" : "Create New Banner"}
            </button>
          </div>

          {/* Create/Edit Form */}
          {isCreating && (
            <div className="bg-gray-50 rounded-lg p-6 mb-6 border border-gray-200">
              <h3 className="text-lg font-medium mb-4">
                {editingId ? "Edit Banner" : "Create New Banner"}
              </h3>
              <form onSubmit={handleSubmit} className="space-y-4">
                <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <label className="block text-sm font-medium text-dark mb-1">
                      Title *
                    </label>
                    <input
                      type="text"
                      required
                      value={formData.title}
                      onChange={(e) =>
                        setFormData((prev) => ({ ...prev, title: e.target.value }))
                      }
                      className="w-full px-3 py-2 border border-gray-3 rounded-md focus:outline-none focus:ring-2 focus:ring-blue"
                    />
                  </div>
                  <div>
                    <label className="block text-sm font-medium text-dark mb-1">
                      Subtitle
                    </label>
                    <input
                      type="text"
                      value={formData.subtitle}
                      onChange={(e) =>
                        setFormData((prev) => ({ ...prev, subtitle: e.target.value }))
                      }
                      className="w-full px-3 py-2 border border-gray-3 rounded-md focus:outline-none focus:ring-2 focus:ring-blue"
                    />
                  </div>
                </div>

                <div>
                  <label className="block text-sm font-medium text-dark mb-1">
                    Image URL *
                  </label>
                  <div className="flex gap-2 mb-2">
                    <input
                      type="text"
                      required
                      value={formData.imageUrl}
                      onChange={(e) =>
                        setFormData((prev) => ({ ...prev, imageUrl: e.target.value }))
                      }
                      placeholder="e.g., /images/hero/banner1.png"
                      className="flex-1 px-3 py-2 border border-gray-3 rounded-md focus:outline-none focus:ring-2 focus:ring-blue"
                    />
                    <label className="bg-green text-white px-4 py-2 rounded-md hover:bg-green-dark cursor-pointer whitespace-nowrap">
                      {uploading ? "Uploading..." : "üì§ Upload"}
                      <input
                        type="file"
                        accept="image/*"
                        onChange={handleFileUpload}
                        disabled={uploading}
                        className="hidden"
                      />
                    </label>
                    <button
                      type="button"
                      onClick={() => {
                        setShowGallery(!showGallery);
                        if (!showGallery) fetchGallery();
                      }}
                      className="bg-purple text-white px-4 py-2 rounded-md hover:bg-purple-dark whitespace-nowrap"
                    >
                      üñºÔ∏è Gallery
                    </button>
                  </div>
                  
                  {/* Image Preview */}
                  {formData.imageUrl && (
                    <div className="mt-2">
                      <div className="relative w-32 h-20 border border-gray-3 rounded-md overflow-hidden">
                        <img
                          src={formData.imageUrl}
                          alt="Preview"
                          className="w-full h-full object-cover"
                        />
                      </div>
                    </div>
                  )}

                  {/* Gallery Modal */}
                  {showGallery && (
                    <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
                      <div className="bg-white rounded-lg max-w-4xl w-full max-h-[80vh] overflow-y-auto p-6">
                        <div className="flex justify-between items-center mb-4">
                          <h3 className="text-lg font-semibold text-dark">
                            Select Image from Gallery
                          </h3>
                          <button
                            onClick={() => setShowGallery(false)}
                            className="text-dark-4 hover:text-dark text-2xl"
                          >
                            √ó
                          </button>
                        </div>

                        <div className="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
                          {galleryImages.map((img) => (
                            <button
                              key={img.filename}
                              type="button"
                              onClick={() => {
                                setFormData((prev) => ({ ...prev, imageUrl: img.url }));
                                setShowGallery(false);
                              }}
                              className="relative aspect-video border-2 border-gray-3 rounded-md overflow-hidden hover:border-blue transition-colors"
                            >
                              <img
                                src={img.url}
                                alt={img.filename}
                                className="w-full h-full object-cover"
                              />
                            </button>
                          ))}
                          {galleryImages.length === 0 && (
                            <div className="col-span-full text-center text-dark-4 py-8">
                              No images in gallery yet. Upload some images first!
                            </div>
                          )}
                        </div>
                      </div>
                    </div>
                  )}
                </div>

                <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <label className="block text-sm font-medium text-dark mb-1">
                      Link URL
                    </label>
                    <input
                      type="text"
                      value={formData.linkUrl}
                      onChange={(e) =>
                        setFormData((prev) => ({ ...prev, linkUrl: e.target.value }))
                      }
                      placeholder="e.g., /shop-with-sidebar?category=gpu"
                      className="w-full px-3 py-2 border border-gray-3 rounded-md focus:outline-none focus:ring-2 focus:ring-blue"
                    />
                  </div>
                  <div>
                    <label className="block text-sm font-medium text-dark mb-1">
                      Button Text
                    </label>
                    <input
                      type="text"
                      value={formData.buttonText}
                      onChange={(e) =>
                        setFormData((prev) => ({
                          ...prev,
                          buttonText: e.target.value,
                        }))
                      }
                      placeholder="e.g., Shop Now"
                      className="w-full px-3 py-2 border border-gray-3 rounded-md focus:outline-none focus:ring-2 focus:ring-blue"
                    />
                  </div>
                </div>

                <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
                  <div>
                    <label className="block text-sm font-medium text-dark mb-1">
                      Position *
                    </label>
                    <select
                      value={formData.position}
                      onChange={(e) =>
                        setFormData((prev) => ({ ...prev, position: e.target.value }))
                      }
                      className="w-full px-3 py-2 border border-gray-3 rounded-md focus:outline-none focus:ring-2 focus:ring-blue text-dark"
                    >
                      <optgroup label="Hero Section (Top)">
                        <option value="hero-carousel">üé† Hero Carousel (Main slider)</option>
                        <option value="hero-side">üì± Hero Side (2 small banners)</option>
                      </optgroup>
                      <optgroup label="Promo Section (Bottom)">
                        <option value="promo-big">üéØ Promo Big (1 large banner)</option>
                        <option value="promo-small">üéÅ Promo Small (2 side banners)</option>
                      </optgroup>
                    </select>
                  </div>
                  <div>
                    <label className="block text-sm font-medium text-dark mb-1">
                      Order
                    </label>
                    <input
                      type="number"
                      value={formData.order}
                      onChange={(e) =>
                        setFormData((prev) => ({
                          ...prev,
                          order: parseInt(e.target.value) || 0,
                        }))
                      }
                      className="w-full px-3 py-2 border border-gray-3 rounded-md focus:outline-none focus:ring-2 focus:ring-blue"
                    />
                  </div>
                  <div className="flex items-center">
                    <label className="flex items-center cursor-pointer">
                      <input
                        type="checkbox"
                        checked={formData.isActive}
                        onChange={(e) =>
                          setFormData((prev) => ({
                            ...prev,
                            isActive: e.target.checked,
                          }))
                        }
                        className="w-4 h-4 text-blue border-gray-3 rounded focus:ring-blue"
                      />
                      <span className="ml-2 text-sm font-medium text-dark">
                        Active
                      </span>
                    </label>
                  </div>
                </div>

                <div className="flex gap-3 pt-4">
                  <button
                    type="submit"
                    disabled={loading}
                    className="bg-blue text-white px-6 py-2 rounded-md hover:bg-blue-dark disabled:opacity-50"
                  >
                    {loading ? "Saving..." : editingId ? "Update" : "Create"}
                  </button>
                  <button
                    type="button"
                    onClick={() => {
                      resetForm();
                      setIsCreating(false);
                    }}
                    className="bg-gray-2 text-dark px-6 py-2 rounded-md hover:bg-gray-3"
                  >
                    Cancel
                  </button>
                </div>
              </form>
            </div>
          )}

          {/* Banners List */}
          <div className="bg-white border border-gray-200 rounded-lg overflow-hidden">
            <table className="min-w-full divide-y divide-gray-200">
              <thead className="bg-gray-50">
                <tr>
                  <th className="px-6 py-3 text-left text-xs font-medium text-dark-4 uppercase tracking-wider">
                    Image
                  </th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-dark-4 uppercase tracking-wider">
                    Title
                  </th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-dark-4 uppercase tracking-wider">
                    Position
                  </th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-dark-4 uppercase tracking-wider">
                    Status
                  </th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-dark-4 uppercase tracking-wider">
                    Order
                  </th>
                  <th className="px-6 py-3 text-right text-xs font-medium text-dark-4 uppercase tracking-wider">
                    Actions
                  </th>
                </tr>
              </thead>
              <tbody className="bg-white divide-y divide-gray-200">
                {banners
                  .filter(
                    (banner) =>
                      positionFilter === "all" ||
                      banner.position === positionFilter
                  )
                  .map((banner) => {
                    const positionLabels: Record<string, string> = {
                      "hero-carousel": "üé† Carousel",
                      "hero-side": "üì± Side",
                      "promo-big": "üéØ Promo Big",
                      "promo-small": "üéÅ Promo Small",
                    };

                    return (
                      <tr key={banner.id}>
                        <td className="px-6 py-4 whitespace-nowrap">
                          <div className="relative w-24 h-16">
                            <img
                              src={banner.imageUrl}
                              alt={banner.title}
                              className="w-full h-full object-cover rounded"
                            />
                          </div>
                        </td>
                        <td className="px-6 py-4">
                          <div className="text-sm font-medium text-dark">
                            {banner.title}
                          </div>
                          {banner.subtitle && (
                            <div className="text-sm text-dark-4">
                              {banner.subtitle}
                            </div>
                          )}
                        </td>
                        <td className="px-6 py-4 whitespace-nowrap">
                          <span className="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-light-5 text-blue">
                            {positionLabels[banner.position] || banner.position}
                          </span>
                        </td>
                        <td className="px-6 py-4 whitespace-nowrap">
                          <span
                            className={`px-2 inline-flex text-xs leading-5 font-semibold rounded-full ${
                              banner.isActive
                                ? "bg-green-light-6 text-green"
                                : "bg-red-light-5 text-red"
                            }`}
                          >
                            {banner.isActive ? "Active" : "Inactive"}
                          </span>
                        </td>
                        <td className="px-6 py-4 whitespace-nowrap text-sm text-dark-4">
                          {banner.order}
                        </td>
                        <td className="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                          <button
                            onClick={() => handleEdit(banner)}
                            className="text-blue hover:text-blue-dark mr-4"
                          >
                            Edit
                          </button>
                          <button
                            onClick={() => handleDelete(banner.id)}
                            className="text-red hover:text-red-dark"
                          >
                            Delete
                          </button>
                        </td>
                      </tr>
                    );
                  })}
                {banners.filter(
                  (banner) =>
                    positionFilter === "all" || banner.position === positionFilter
                ).length === 0 && (
                  <tr>
                    <td
                      colSpan={6}
                      className="px-6 py-8 text-center text-dark-4"
                    >
                      No banners yet. Create your first banner above!
                    </td>
                  </tr>
                )}
              </tbody>
            </table>
          </div>
        </div>
      )}

      {/* Logo Tab */}
      {activeTab === "logo" && (
        <div className="bg-gray-50 rounded-lg p-6 border border-gray-200">
          <h2 className="text-xl font-semibold mb-6">Site Logo</h2>
          
          <div className="space-y-6">
            <div>
              <label className="block text-sm font-medium text-dark mb-2">
                Current Logo
              </label>
              <div className="bg-white p-4 rounded-lg inline-block border border-gray-200">
                <Image
                  src={logoUrl}
                 img
                  src={logoUrl}
                  alt="Site Logo"
              </div>
            </div>

            <div>
              <label className="block text-sm font-medium text-dark mb-2">
                Logo URL
              </label>
              <div className="flex gap-2">
                <input
                  type="text"
                  value={logoUrl}
                  onChange={(e) => setLogoUrl(e.target.value)}
                  placeholder="e.g., /images/logo/logo.svg"
                  className="flex-1 max-w-xl px-3 py-2 border border-gray-3 rounded-md focus:outline-none focus:ring-2 focus:ring-blue"
                />
                <label className="bg-green text-white px-4 py-2 rounded-md hover:bg-green-dark cursor-pointer whitespace-nowrap">
                  {uploading ? "Uploading..." : "üì§ Upload Logo"}
                  <input
                    type="file"
                    accept="image/*"
                    onChange={async (e) => {
                      const file = e.target.files?.[0];
                      if (!file) return;

                      setUploading(true);
                      try {
                        const uploadFormData = new FormData();
                        uploadFormData.append("file", file);
                        uploadFormData.append("folder", "logo");

                        const res = await fetch("/api/admin/upload", {
                          method: "POST",
                          body: uploadFormData,
                        });

                        if (res.ok) {
                          const data = await res.json();
                          setLogoUrl(data.url);
                          alert("Logo uploaded successfully!");
                        } else {
                          const error = await res.json();
                          alert(`Upload failed: ${error.error}`);
                        }
                      } catch (error) {
                        console.error("Upload error:", error);
                        alert("Failed to upload logo");
                      } finally {
                        setUploading(false);
                      }
                    }}
                    disabled={uploading}
                    className="hidden"
                  />
                </label>
              </div>
              <p className="mt-2 text-sm text-dark-4">
                Upload your logo or enter URL manually (SVG, PNG, WebP recommended)
              </p>
            </div>

            <button
              onClick={handleSaveLogo}
              disabled={loading}
              className="bg-blue text-white px-6 py-2 rounded-md hover:bg-blue-dark disabled:opacity-50"
            >
              {loading ? "Saving..." : "Save Logo"}
            </button>
          </div>
        </div>
      )}
    </div>
  );
}

