# Copy this file to .env.local and fill the values

# PostgreSQL connection string
# Example: postgresql://USER:PASSWORD@localhost:5432/nextmerce?schema=public
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/nextmerce?schema=public"

# Optional but recommended for local development:
# Use a privileged connection for Prisma's shadow DB during `prisma migrate dev`
# so your app role doesn't need CREATEDB permission.
SHADOW_DATABASE_URL="postgresql://postgres:YOUR_SUPERUSER_PASSWORD@localhost:5432/postgres?schema=public"

# NextAuth base URL (during local dev)
NEXTAUTH_URL="http://localhost:3000"
# Generate a strong secret, e.g., with `openssl rand -base64 32`
NEXTAUTH_SECRET="replace-with-strong-secret"

# Google OAuth credentials (create in Google Cloud Console)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Comma-separated list of admin emails
ADMIN_EMAILS="you@example.com,other@example.com"

# VNPay Payment Gateway Configuration
# Register for sandbox account at: https://sandbox.vnpayment.vn/
VNPAY_TMN_CODE="your-vnpay-terminal-code"
VNPAY_HASH_SECRET="your-vnpay-hash-secret-key"
VNPAY_URL="https://sandbox.vnpayment.vn/paymentv2/vpcpay.html"
VNPAY_RETURN_URL="http://localhost:3000/api/vnpay/return"
